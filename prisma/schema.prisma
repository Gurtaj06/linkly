generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Url {
  id        Int    @id @default(autoincrement())
  shortLink String @db.VarChar(40)
  ogLink String @db.VarChar(255)
  clickCount Int @default(0)
  status String 
  createdAt DateTime
  userId  Int @unique
  user User @relation(fields: [userId], references: [id])
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  password String 
  firstname    String? @db.VarChar(40)
  lastname    String   @db.VarChar(40)
  urls  Url[]
} 



 
