generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://url_db_owner:p2GM0ZyQKNJR@ep-holy-breeze-a5j0f68q-pooler.us-east-2.aws.neon.tech/url_db?sslmode=require"
}

model Url {
  id        Int    @id @default(autoincrement())
  shortLink String @db.VarChar(40)
  ogLink String @db.VarChar(255)
  qrCode Bytes 
  clickCount Int
  status String 
  createdAt DateTime
  userId  Int @unique
  user User @relation(fields: [userId], references: [id])
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  urls  Url[]
}
